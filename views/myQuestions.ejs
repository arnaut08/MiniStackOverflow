<nav class="navbar navbar-light bg-light navbar-expand">
    <a class="navbar-brand" href="/home">StackOverFlowMini</a>
    <div class="container justify-content-center pr-5">
        <div class="menu pr-2">
            <ul class="navbar-nav">
                <li class="navbar-item">
                    <a href="/home" class="nav-link">Home</a>
                </li>
                <li class="navbar-item">
                    <a href="/home/add" class="nav-link">Add Questions</a>
                </li>
                <li class="navbar-item">
                    <a href="/home/answers" class="nav-link">My Answers</a>
                </li>
                <li class="navbar-item">
                    <a href="/home/questions" class="nav-link">My Questions</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="justify-content-end">
        <ul class="navbar-nav">
            <li class="nav-link"><a href="/logout" class="btn btn-warning">Logout</a></li>
        </ul>
    </div>
</nav>

<section class="container mt-3 py-2 abody d-flex flex-column">
    <h3 class="align-self-center">Myquestions</h3>
    <%if(ques.length>0){%>
        <% ques.forEach((value)=>{ %>
            <% if(value.by==user){%>
                <div class="py-2 questions d-flex flex-column">
                    <p class="px-2">Title:<%= value.title%></p>
                    <p class="px-2">Question:<%= value.content%></p>
                    <a href="/home/questions/<%= value._id %>" class="btn btn-primary w-50 align-self-center pl-3">Check Answers</a>
                </div>
                <hr>
            <%}%>
        <%})%>
    <%}%>  
</section>

